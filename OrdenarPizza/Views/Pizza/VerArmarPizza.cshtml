@model OrdenarPizza.Models.PizzaModel

@{
    ViewBag.Title = "Armar su pizza";
}

<h3></h3>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>

<body>
    <div class="shadow" style="padding: 25px; border-radius: 25px; background-color:white;">
        <div class="row" style="margin-left: 0px;margin-right: 0px;">
            <div class="col-3">
                <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                    <a class="nav-link active" id="v-pills-home-tab" data-toggle="pill" href="#v-pills-home" role="tab" aria-controls="v-pills-home" aria-selected="true">Tamaño y masa</a>
                    <a class="nav-link" id="v-pills-profile-tab" data-toggle="pill" href="#v-pills-profile" role="tab" aria-controls="v-pills-profile" aria-selected="false">Salsa y queso</a>
                    <a class="nav-link" id="v-pills-messages-tab" data-toggle="pill" href="#v-pills-messages" role="tab" aria-controls="v-pills-messages" aria-selected="false">Ingredientes</a>
                </div>
            </div>
            @using (Html.BeginForm("CalificarCCQT", "Evaluacion", new { carne = ViewBag.carne }, FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="tab-content" id="v-pills-tabContent">
                    <div class="tab-pane fade show active" id="v-pills-home" role="tabpanel" aria-labelledby="v-pills-home-tab">
                        <div class="row">
                            <div class="col-sm">
                                <br />
                                <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn%3AANd9GcQBFuOUKVSNLuWmwocmrO6MbyinQjbKexVZVw&usqp=CAU" class="img-thumbnail alt="Pizza">
                            </div>
                            <div class="col-sm">
                                <h3>Masa</h3>
                                <div class="custom-control custom-radio">
                                    <input type="radio" id="original" name="TipoMasa" class="custom-control-input" checked="">
                                    <label class="custom-control-label" for="original">Original</label>
                                </div>
                                <div class="custom-control custom-radio">
                                    <input type="radio" id="sarten" name="TipoMasa" class="custom-control-input">
                                    <label class="custom-control-label" for="sarten">Sartén</label>
                                </div>
                                <div class="custom-control custom-radio">
                                    <input type="radio" id="bordeConQueso" name="TipoMasa" class="custom-control-input" checked="">
                                    <label class="custom-control-label" for="bordeConQueso">Borde con queso</label>
                                </div>
                                <div class="custom-control custom-radio">
                                    <input type="radio" id="crunchy" name="TipoMasa" class="custom-control-input">
                                    <label class="custom-control-label" for="crunchy">Crunchy</label>
                                </div>
                            </div>
                            <div class="col-sm ">
                                <h3>Tamaño</h3>
                                <div class="custom-control custom-radio">
                                    <input type="radio" id="dominator" name="tamañoPizza" class="custom-control-input" checked="">
                                    <label class="custom-control-label" for="dominator">Dominator</label>
                                </div>
                                <div class="custom-control custom-radio">
                                    <input type="radio" id="grande" name="tamañoPizza" class="custom-control-input">
                                    <label class="custom-control-label" for="grande">Grande</label>
                                </div>
                                <div class="custom-control custom-radio">
                                    <input type="radio" id="mediana" name="tamañoPizza" class="custom-control-input" checked="">
                                    <label class="custom-control-label" for="mediana">Mediana</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="v-pills-profile" role="tabpanel" aria-labelledby="v-pills-profile-tab">
                        <div class="row">
                            <div class="col-sm">
                                <br />
                                <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn%3AANd9GcQBFuOUKVSNLuWmwocmrO6MbyinQjbKexVZVw&usqp=CAU" class="img-thumbnail alt="Pizza">
                            </div>
                            <div class="col-sm">
                                <h3>Salsa</h3>
                                <div class="custom-control custom-radio">
                                    <input type="radio" id="original" name="TipoMasa" class="custom-control-input" checked="">
                                    <label class="custom-control-label" for="original">Original</label>
                                </div>
                                <div class="custom-control custom-radio">
                                    <input type="radio" id="sarten" name="TipoMasa" class="custom-control-input">
                                    <label class="custom-control-label" for="sarten">Sartén</label>
                                </div>
                                <div class="custom-control custom-radio">
                                    <input type="radio" id="bordeConQueso" name="TipoMasa" class="custom-control-input" checked="">
                                    <label class="custom-control-label" for="bordeConQueso">Borde con queso</label>
                                </div>
                                <div class="custom-control custom-radio">
                                    <input type="radio" id="crunchy" name="TipoMasa" class="custom-control-input">
                                    <label class="custom-control-label" for="crunchy">Crunchy</label>
                                </div>
                            </div>
                            <div class="col-sm ">
                                <h3>Queso</h3>
                                <div class="custom-control custom-radio">
                                    <input type="radio" id="dominator" name="tamañoPizza" class="custom-control-input" checked="">
                                    <label class="custom-control-label" for="dominator">Dominator</label>
                                </div>
                                <div class="custom-control custom-radio">
                                    <input type="radio" id="grande" name="tamañoPizza" class="custom-control-input">
                                    <label class="custom-control-label" for="grande">Grande</label>
                                </div>
                                <div class="custom-control custom-radio">
                                    <input type="radio" id="mediana" name="tamañoPizza" class="custom-control-input" checked="">
                                    <label class="custom-control-label" for="mediana">Mediana</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane fade show active" id="v-pills-home" role="tabpanel" aria-labelledby="v-pills-home-tab"></div>
                </div>
            }
        </div>
    </div>
</body>

<script>
    function tabSalsa() {
        document.getElementById("v-pills-home-tab").setAttribute('active', 'false')
        document.getElementById("v-pills-profile-tab").setAttribute('active', 'true')
    }
</script>
