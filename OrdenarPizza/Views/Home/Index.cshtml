@model OrdenarPizza.Models.PizzaModel

@{
    ViewBag.Title = "Inicio";
}

@if (ViewBag.mensaje == "Compra realizada")
{
    <div class="alert alert-dismissible alert-success">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong>Compra realizada!</strong> Logró hacer la compra existosamente. Gracias por preferirnos!
    </div>
}

<div class="card bg-light mb-3" style="max-width: 20rem;">
    <div class="card-header"><h3>Promoción</h3></div>
    <div class="card-body">
        <h4 class="card-title">Arme su propia pizza</h4>
        <p class="card-text">
            No salga de su casa en tiempos de pandemia y aproveche esta promoción con envío gratis. <br />
            <div class="row">
                <div class="col">
                    
                </div>
                <div class="col">
                    <button type="button" class="btn btn-primary" onclick="irArmarPizza()">Ir a la oferta</button>
                </div>
            </div>
        </p>
    </div>
</div>

<script type="text/javascript">
    function irArmarPizza() {
        window.location = '/Pizza/VerArmarPizza';
    }
</script>

<style>
    a.card-body,
    a.card-body:hover {
        color: inherit;
    }
</style>